{{#each news}}



    <div class="panel panel-default" id="story_{{@index}}">
        <div class="panel-heading">
            <h3 class="panel-title">{{title}}</h3>
        </div>
        <div class="panel-body">
            {{brief}}

            <p><a href="{{link}}" class="btn btn-sm btn-primary">Read More</a></p>
        </div>
        <div class="panel-footer">Comments:
            <input class type="textarea" name="user" placeholder="comment" id="assigned">
            <input type="hidden" name="task" value="true" />
            <button type="submit" class="btn btn-sm btn-warning">Add </button></div>



    </div>

{{/each}}



